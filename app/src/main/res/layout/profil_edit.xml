<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/profiledit_layout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profilLayout_etName"
        android:layout_above="@+id/etGeb"
        android:layout_alignEnd="@+id/editProfil_buttonLogout"
        android:layout_marginBottom="34dp"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etGeb"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/profilLayout_etName"
        android:inputType="date"
        android:hint="Geburtsdatum" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editProfil_buttonLogout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/infoET"
        android:layout_height="80dp"
        android:layout_below="@+id/etGeb"
        android:layout_alignParentEnd="true"
        android:hint="Etwas Ã¼ber dich..."
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:layout_alignStart="@+id/etGeb" />

    <Button
        android:id="@+id/editProfil_buttonSpeichern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/infoET"
        android:layout_below="@+id/infoET"
        android:layout_marginTop="19dp"
        android:text="Speichern" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/profilLayout_etName"
        android:layout_below="@+id/textView"
        android:layout_marginTop="18dp"
        android:text="Profil Edit"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/begruessungTW"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/testGeb"
        android:layout_below="@+id/textName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>